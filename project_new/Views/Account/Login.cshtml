@model project_new.ViewModel.AccountViewModel
@{
    Layout = "~/Views/_LayoutPage1.cshtml";
}
<html>
<head>
    <title>Login</title>

</head>

<div class="form">
    <h1>Welcome to Moodle</h1>
    <div class="form-content">
        <form action="Verify" method="post">
            <div class="form-info">
                <h2>Login</h2>
            </div>
            <div class="email-w3l">
                <span class="i1"><i class="fa fa-envelope-o" aria-hidden="true"></i></span>
                <input class="email" type="text" name="Name" placeholder="Username" required=""  pattern="[a-zA-Z]{1,51}" >>
            </div>
            <div class="pass-w3l">
                <span class="i2"><i class="fa fa-unlock" aria-hidden="true"></i></span>
                <input class="pass" type="password" name="Password" placeholder="Password" required="">
            </div>
            <div class="form-check">
                <div class="left">
                    <input type="checkbox" value="Remember me">Remember me
                </div>
                <div class="right">
                    <a href="#">Forgot Password?</a>
                </div>
                <div class="clear"></div>
            </div>
            <div class="submit-agileits">
                <input class="login" type="submit" value="login">
            </div>
        </form>
    </div>
</div>

</html>