@model project_new.Models.Courses

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LecturerCourse</title>
    <link href="~/styles/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/styles/navbar.css" rel="stylesheet" />
    <style>
        body {
            background: url("../images/login-img.jpg");
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center;
            background-size: cover;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            -ms-background-size: cover;
            font-family: 'Raleway', sans-serif;
        }
    </style>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        table {
            border-collapse: collapse;
            border-spacing: 0;
            width: 100%;
            border: 1px solid #ddd;
        }

        th, td {
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: grey;
        }
    </style>

</head>
<body>
    <div>
        <div class="navbar">
            <a href="/Account/LecturerHomePage" class="Button">Home</a>
            <a href="/Lecturer/LecturerSchedule" class="Button">Schedule</a>
            <div class="dropdown">
                <button class="dropbtn">
                    More
                    <i class="fa fa-caret-down"></i>
                </button>
                <div class="dropdown-content">
                    <a href="/Lecturer/LecturerUpdateExamsGrades" class="Button">Exams</a>
                    <a href="/Lecturer/LecturerCourse" class="Button">Course</a>
                </div>

            </div>
        </div>
        <center>
            <h1 style="color:white">Schedule details</h1>
            <table id="customers">
                <tr style="color:white">
                    <th>Course</th>
                    <th>Day</th>
                    <th>Hour</th>
                    <th>Class</th>
                </tr>
                <strong style="color:white">
                    Hey @Session["Username"], This is your schedule.
                </strong>
                <tr>
                    @if (Model != null)
                    {
                        if (Model.info != null)
                        {

                            foreach (var item in Model.info)
                            {
                            <tr style="color:white">
                                <td>@Html.DisplayFor(m => item.CourseName)</td>

                                <td>@Html.DisplayFor(m => item.Day)</td>
                                <td>@Html.DisplayFor(m => item.startHour) - @Html.DisplayFor(m => item.endHour)</td>
                                <td>@Html.DisplayFor(m => item.Class)</td>

                            </tr>
                        }

                    }
                }

                </table>

            </center>

        </div>

    </body>
</html>